<div class="container-fluid text-warning p-0">
    <div class="row m-0">
        <div class="ordered-burgers-area col-sm py-3 float-left">
            <h4 class="text-center">Here's the burgers you've ordered!</h4>
            {{#each burgers}} {{#unless devoured}}
            <p><strong># {{this.id}} {{this.burger_name}}</strong>
                <button data-burger-id="{{this.id}}" id="devour-btn" class="btn btn-outline-warning float-right">Devour it!</button>
            </p>
            {{/unless}} {{/each}}
        </div>

        <div class="order-area col-sm py-3 text-center float-center">
            <h4>Order a burger!</h4>
            <form class="create-form">
                <div class="form-group">
                    <input class="form=control" id="burger-name-input" name="burgerName" rows="1">
                    </textarea>
                </div>
                <button id="new-burger-btn" type="submit" class="btn-lg btn-outline-warning">Submit</button>
            </form>
        </div>
        
        <div class="devoured-burgers-area col-sm py-3 float-right">
            <h4 class="text-center">Burgers you've devoured</h4>
            {{#each burgers}} {{#if devoured}}
            <p><strong># {{this.id}} {{this.burger_name}}</strong></p>
            {{/if}} {{/each}}
        </div>
    </div>
</div>